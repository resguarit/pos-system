# Copy this template and customize for Kiosco El 11

# VPS Connection
VPS_HOST=YOUR_VPS_HOST_KIOSCOEL11
VPS_PORT=22
VPS_USERNAME=posdeployer

# Domain Configuration
FRONTEND_DOMAIN=kioscoel11.com.ar
FRONTEND_WWW_DOMAIN=www.kioscoel11.com.ar
BACKEND_DOMAIN=api.kioscoel11.com.ar

# Deployment Paths
FRONTEND_DEPLOY_PATH=/home/kioscoel11.com.ar/public_html
BACKEND_DEPLOY_PATH=/home/api.kioscoel11.com.ar/public_html

# API Configuration
VITE_API_URL=https://api.kioscoel11.com.ar/api

# Database Configuration
DB_HOST=localhost
DB_DATABASE=kioscoel11_pos
DB_USERNAME=kioscoel11_user
DB_PASSWORD=secure_password_here

# App Configuration
APP_NAME="POS - Kiosco El 11"
APP_ENV=production
APP_DEBUG=false

# Cache & Session
CACHE_DRIVER=file
SESSION_DRIVER=file
SESSION_LIFETIME=120
