# VPS Connection
VPS_HOST=YOUR_VPS_HOST_DIPAG
VPS_PORT=22
VPS_USERNAME=posdeployer

# Domain Configuration
FRONTEND_DOMAIN=dipag.rgpos.com.ar
FRONTEND_WWW_DOMAIN=www.dipag.rgpos.com.ar
BACKEND_DOMAIN=dipag-api.rgpos.com.ar

# Deployment Paths
FRONTEND_DEPLOY_PATH=/home/dipag.rgpos.com.ar/public_html
BACKEND_DEPLOY_PATH=/home/dipag-api.rgpos.com.ar/public_html

# API Configuration
VITE_API_URL=https://dipag-api.rgpos.com.ar/api

# Database Configuration
DB_HOST=localhost
DB_DATABASE=dipag_pos
DB_USERNAME=dipag_user
DB_PASSWORD=secure_password_here

# App Configuration
APP_NAME="POS - DIPAG Distribuidora"
APP_ENV=production
APP_DEBUG=false

# Cache & Session
CACHE_DRIVER=file
SESSION_DRIVER=file
SESSION_LIFETIME=120
