{
  "name": "pos-system",
  "version": "1.8.0",
  "description": "Modern Point of Sale (POS) system built with React/TypeScript and Laravel",
  "private": true,
  "keywords": [
    "pos",
    "point-of-sale",
    "react",
    "laravel",
    "typescript",
    "monorepo"
  ],
  "author": "Resguar IT",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/resguarit/pos-system.git"
  },
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "dev:backend": "cd apps/backend && php artisan serve",
    "build": "npm run build:frontend",
    "build:frontend": "cd apps/frontend && npm run build",
    "install:all": "npm install && cd apps/frontend && npm install && cd ../backend && composer install",
    "lint": "cd apps/frontend && npm run lint",
    "test": "cd apps/frontend && npm test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "lerna": "^8.0.0",
    "@vitejs/plugin-react": "^4.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}