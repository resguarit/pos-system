<IfModule mod_headers.c>
  # No cachear index.html nunca - siempre debe ser fresh para detectar nuevos builds
  <FilesMatch "^(index\.html|favicon\.ico)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate, max-age=0"
    Header set Pragma "no-cache"
    Header set Expires "0"
  </FilesMatch>
  
  # Cachear assets con hash por 1 año (tienen nombres únicos)
  <FilesMatch "\.(js|css|woff|woff2|ttf|eot|svg|png|jpg|jpeg|gif|ico|webp)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
</IfModule>

<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Si el archivo o directorio existe, servirlo directamente
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  
  # Si no existe, servir index.html (para React Router)
  RewriteRule . /index.html [L]
</IfModule>

